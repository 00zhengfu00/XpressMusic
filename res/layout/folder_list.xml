<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_folder_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/top_of_folder_list"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:clickable="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/menu_navigation"
            android:layout_width="48dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_grey_backgound_when_pressed"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/button_menu_navigation" />

        <View
            android:id="@+id/section_line_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/menu_navigation"
            android:background="#ccffffff" />

        <ImageView
            android:id="@+id/switch_to_player"
            android:layout_width="48dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_grey_backgound_when_pressed"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/go_to_play" />

        <ImageView
            android:id="@+id/more_functions"
            android:layout_width="48dip"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/switch_to_player"
            android:background="@drawable/button_grey_backgound_when_pressed"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/overflow_dark" />

        <TextView
            android:id="@+id/title_of_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/more_functions"
            android:layout_toRightOf="@id/section_line_vertical"
            android:background="@drawable/button_backround_light"
            android:drawableLeft="@drawable/btn_titile_back"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/classify_by_folder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="false" />
    </RelativeLayout>

    <View
        android:id="@+id/section_line_horizental"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top_of_folder_list"
        android:background="@color/holo_blue_dark" >
    </View>

    <ListView
        android:id="@+id/listview_folder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/section_line_horizental"
        android:cacheColorHint="#00000000"
        android:fastScrollEnabled="true" >
    </ListView>

</RelativeLayout>